<%- include("includes/head.ejs") %>

<body class="bg-dark">
    <center>
        <div class="profile p-3 mb-2 bg-black text-dark-emphasis rounded-2 ">
                    
            <div class="profile-image">
               
                <img src="<%= account.profile_pic %>" alt="">
            </div>
            <div class="profile-info">
                <div class="first-info">
                    <p class="fw-bold"><%= account.username %></p>
                    <button class="btn btn-primary fw-semibold">Follow</button>
                    <button  class="btn btn-secondary fw-semibold">Message</button>
                </div>
                <div class="second-info">
                    <p><span class="fw-bolder"><%= account.post_count %></span> posts</p>
                    <p><span class="fw-bolder"><%= account.followers_count %></span> followers</p>
                    <p><span class="fw-bolder"><%= account.following_count %></span> following</p>
                </div>
                <div class="content">
                    <%= account.content %>
                    
                </div>  
                
            </div>
            
        </div>
        <a href="/accounts/">Back</a>
    </center>
   
</body>
</html>